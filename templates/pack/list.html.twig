{% extends 'base.html.twig' %}

{% block title %}ALL PACKS LIST{% endblock %}

{% block main %}

<h1>All Packs</h1>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Element</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>

		{% for pack in packs%}
        <tr>
        	<td>{{ pack.id }}</td>
            <td>{{ pack.title }}</td>
            <td><a href="{{ path('pack_show', {'id': pack.id}) }}">show</a></td>
        </tr>
		{% endfor %} {# packs #}

    </tbody>
</table>

<a href="{{ path('home') }}" class="btn btn-primary mt-mb-3">Back to Home Page</a>

{% endblock %} {# body #}
