{% extends 'base.html.twig' %}

{% block title %}YGOCard{% endblock %}

{% block main %}
    <h1>YGOCard</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ygo_card.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
