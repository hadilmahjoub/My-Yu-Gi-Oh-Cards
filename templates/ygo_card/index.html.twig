{% extends 'base.html.twig' %}

{% block title %}YGOCard index{% endblock %}

{% block main %}
    <h1>YGOCard index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ygo_card in ygo_cards %}
            <tr>
                <td>{{ ygo_card.id }}</td>
                <td>{{ ygo_card.name }}</td>
                <td>
                    <a href="{{ path('app_ygo_card_show', {'id': ygo_card.id}) }}">show</a>
                    <a href="{{ path('app_ygo_card_edit', {'id': ygo_card.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
