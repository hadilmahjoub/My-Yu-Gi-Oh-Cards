{% extends 'base.html.twig' %}

{% block title %}Showcase{% endblock %}

{% block main %}
    <h1>Showcase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ showcase.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ showcase.description }}</td>
            </tr>
            <tr>
                <th>Creator</th>
                <td>{{ showcase.creator.email}}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ showcase.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Yu-Gi-Oh! Cards</th>
                <td>
                    <ul>
                      {% for ygoCard in showcase.ygoCards %}
                      <li>
                        <a href="{{ path('app_showcase_ygocard_show', 
                                    {
                                    	'showcase_id' : showcase.id,
                                    	'ygocard_id' : ygoCard.id,
                                    }) }}">{{ ygoCard }}</a>  
                      </li>
                      {% else %}     
                         <em>no YGO Cards found</em>
            		{% endfor %} {# todos #}
                    </ul>
                    
                    
                </td>
			</tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_showcases_show', {'id': showcase.creator.id}) }}" class="btn btn-primary mt-2 mb-2">Back to list</a>

    <a href="{{ path('app_showcase_edit', {'id': showcase.id}) }}" class="btn btn-success mt-2 mb-2">Edit</a>

    {{ include('showcase/_delete_form.html.twig') }}
{% endblock %}
