{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block main %}
    <div class="container mt-5">
        <h2 class="text-center mb-4">Users List</h2>

        <table class="table table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm">Show Details</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center text-muted">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        
        <!-- Navigation Buttons -->
        <div class="d-flex justify-content-center my-4">
        	<a href="{{ path('home') }}" class="btn btn-secondary mx-2">Back to Home page</a>
        </div>
    </div>
{% endblock %}
